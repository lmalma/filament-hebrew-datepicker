{
    "name": "eli-sheinfeld/hebrew-date-picker",
    "description": "Hebrew date picker component for Filament with full Hebrew calendar support",
    "keywords": [
        "filament",
        "hebrew",
        "date-picker",
        "jewish-calendar",
        "laravel",
        "hebrew-date-picker"
    ],
    "homepage": "https://github.com/eli-sheinfeld/hebrew-date-picker",
    "support": {
        "issues": "https://github.com/eli-sheinfeld/hebrew-date-picker/issues",
        "source": "https://github.com/eli-sheinfeld/hebrew-date-picker"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Eli",
            "email": "lma05485@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "filament/filament": "^3.0",
        "spatie/laravel-package-tools": "^1.15.0",
        "nesbot/carbon": "^2.0"
    },
    "suggest": {
        "ext-intl": "Required for accurate Hebrew calendar calculations"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.9",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.1",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "EliSheinfeld\\HebrewDatePicker\\": "src/",
            "EliSheinfeld\\HebrewDatePicker\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EliSheinfeld\\HebrewDatePicker\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "EliSheinfeld\\HebrewDatePicker\\HebrewDatePickerServiceProvider"
            ],
            "aliases": {
                "HebrewDatePicker": "EliSheinfeld\\HebrewDatePicker\\Facades\\HebrewDatePicker"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
